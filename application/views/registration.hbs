<body class="container">
        <form class="regiform">
            <legend>Register</legend>
            <input class="forms valid" type="text" id="uname" required minlength="3" placeholder="User Name"/>
            <br>
            <input class="forms valid" type="email" id="emil" required placeholder="email@whatever.com"/>
            <br>
            <input class="forms valid" type="password" id="pawrd" required minlength="8" placeholder="Password"/>
            <br>
            <input class="forms valid" type="password" id="pawrdc" required placeholder="Confirm Password"/>
            <br>
            <input class="check" type="checkbox" id="13+" name="13+" value="2" required>
            <label for="13+"> I am above 13 years of age</label>
            <br>
            <a class="TOSLink" href="https://google.com/"> TOS and Privacy Rules  </a>
            <br>
            <input class="check" type="checkbox" id="TOS" name="TOS" value="2" required>
            <label for="TOS"> Accept TOS and Privacy rules</label>
            <br>
            <input class="regsub" type="submit" id="submit">
        </form>
</body>
<script defer type="text/javascript" src="../js/registration.js"></script> 
