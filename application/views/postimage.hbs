<body class="container">
    <form class="forms" action="/posts/create" method="POST" enctype="multipart/form-data">
        <fieldset>
            <legend>Post</legend>
            <input class="formsinput" type="text" name="title" required placeholder="Post Title" />
            <br>
            <input class="formsinput" type="text" name="description" required placeholder="Post Description" />
            <br>
            <input class="custom-file-upload" type="file" name="image" required placeholder="Post Image" />
            <br>
            <input class="check" type="checkbox" id="usepl" value="2" required>
            <label for="usepl"> Accept Use Policy for uploading images</label>
            <br>
        </fieldset>
        <input class="postsub" type="submit" value="Post">
    </form>
</body>